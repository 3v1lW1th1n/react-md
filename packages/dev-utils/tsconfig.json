{
  "compilerOptions": {
    "incremental": true,
    "outDir": "./bin",
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "es2019"
    ],
    "typeRoots": [
      "./@types"
    ]
  },
  "include": [
    "@types",
    "src"
  ],
  "exclude": ["src/old"]
}
