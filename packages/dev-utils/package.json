{
  "name": "@react-md/dev-utils",
  "version": "2.0.0-alpha.13",
  "description": "Common build utilities for react-md. Contains helpers for building, watching, testing, etc",
  "private": true,
  "bin": {
    "dev-utils": "./bin/cli.js"
  },
  "scripts": {
    "clean": "rimraf bin dist",
    "executable": "if [[ ! -x \"bin/cli.js\" ]]; then chmod +x bin/cli.js; fi",
    "compile": "tsc",
    "build": "npm-run-all compile executable",
    "watcher": "chokidar \"bin/cli.js\" -c \"npm run executable\"",
    "watch": "npm-run-all -p \"compile -w\" watcher"
  },
  "dependencies": {
    "chokidar": "^3.3.0",
    "commander": "^4.0.1",
    "cpx": "^1.5.0",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.10",
    "filesize": "^6.0.1",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.6",
    "gzip-size": "^5.1.1",
    "jest": "^24.9.0",
    "lodash": "^4.17.15",
    "loglevel": "^1.6.6",
    "markdown-toc": "^1.2.0",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.24",
    "postcss-combine-duplicated-selectors": "^8.0.2",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-preset-env": "^6.7.0",
    "postcss-sorting": "^5.0.1",
    "prettier": "^1.19.1",
    "pretty-ms": "^5.1.0",
    "rimraf": "^3.0.0",
    "sassdoc": "^2.7.0",
    "typescript": "^3.7.3"
  },
  "devDependencies": {
    "chokidar-cli": "^2.1.0"
  }
}
