{
  "name": "dev-utils",
  "version": "2.0.0-alpha-1",
  "description": "Common build utilities for react-md. Contains helpers for building, watching, testing, etc",
  "private": true,
  "bin": {
    "dev-utils": "bin/cli.js"
  },
  "scripts": {
    "clean": "rimraf bin dist",
    "executable": "chmod +x bin/cli.js",
    "compile": "tsc -p tsconfig.json",
    "build": "npm-run-all compile executable",
    "watcher": "chokidar \"bin/cli.js\" -c \"npm run executable\"",
    "watch": "npm-run-all -p \"compile -- -w\" watcher",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "commander": "^2.19.0",
    "cpx": "^1.5.0",
    "enzyme-to-json": "^3.3.5",
    "filesize": "^3.6.1",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "gzip-size": "^5.0.0",
    "jest": "^23.6.0",
    "lodash": "^4.17.11",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "performance-now": "^2.1.0",
    "postcss": "^7.0.7",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-preset-env": "^6.5.0",
    "pretty-ms": "^4.0.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.0.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-typescript": "^1.0.0",
    "rollup-plugin-uglify": "^6.0.0",
    "sassdoc": "^2.5.1",
    "typescript": "^3.2.2",
    "uglifycss": "^0.0.29"
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.1"
  }
}
