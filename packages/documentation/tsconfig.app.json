{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "esModuleInterop": true
  },
  "include": [
    "src/*",
    "src/**/*"
  ],
  "exclude": [
    "**/__tests__/*",
    "src/scripts/**/*"
  ]
}
