{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "target": "es5",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "noImplicitThis": true,
    "alwaysStrict": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "paths": {
      "components/*": ["components/*"],
      "types/*": ["../typings/*"]
    }
  },
  "include": [
    "./typings/**/*",
    "./src/**/*"
  ]
}
