{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "skipLibCheck": true,
    "target": "esnext",
    "rootDir": ".",
    "baseUrl": ".",
    "isolatedModules": true,
    "paths": {
      "constants/*": ["constants/*"],
      "components/*": ["components/*"],
      "hooks/*": ["hooks/*"],
      "icons/*": ["icons/*"],
      "pages/*": ["pages/*"],
      "types/*": ["types/*"],
      "utils/*": ["utils/*"]
    }
  },
  "include": [
    "constants",
    "components",
    "hooks",
    "icons",
    "pages",
    "types",
    "utils"
  ],
  "exclude": [
    "server/**/*.ts",
    "**/__tests__"
  ]
}
