{
  "name": "@react-md/portal",
  "version": "2.0.0-alpha-1",
  "description": "The Portal component is a simple wrapper with React's createPortal API that will automatically generate portal nodes behind the scenes as needed",
  "scripts": {
    "build:commonjs": "tsc -p tsconfig.commonjs.json",
    "build:modules": "tsc -p tsconfig.modules.json",
    "build:definitions": "tsc -p tsconfig.modules.json -d --declarationDir ./types",
    "build": "npm-run-all -p \"build:commonjs\" \"build:modules\" \"build:definitions\"",
    "clean": "rimraf es lib types",
    "prebuild": "npm run clean",
    "update-definitions": "rimraf types && npm run build:definitions",
    "watch:definitions": "watch \"npm run update-definitions\" src --filter ../../tsWatchFilter.js",
    "watch": "npm-run-all -p \"build:commonjs -- --watch\" \"build:modules -- --watch\"",
    "watch:with-defs": "npm-run-all -p watch watch:definitions",
    "test": "jest src",
    "docs": "doc-generator --no-sassdoc",
    "prepublishOnly": "npm run build && npm run docs"
  },
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "types": "./types/index.d.ts",
  "files": [
    "es/*",
    "lib/*",
    "types/*"
  ],
  "author": "Mikkel Laursen <mlaursen03@gmail.com>",
  "repository": "https://github.com/mlaursen/react-md",
  "keywords": [
    "react-md",
    "material design",
    "react",
    "portal",
    "component",
    "components"
  ],
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.2.6"
  },
  "devDependencies": {
    "doc-generator": "^2.0.0-alpha-1",
    "jest": "^23.1.0",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.6",
    "tslint": "^4.5.1",
    "typescript": "^3.0.1",
    "watch": "^1.0.2"
  }
}
