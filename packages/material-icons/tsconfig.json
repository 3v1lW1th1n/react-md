{
  "compilerOptions": {
    "outDir": "./bin",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "include": [
    "scripts"
  ]
}
