{
  "author": "Mikkel Laursen <mlaursen03@gmail.com>",
  "bugs": {
    "url": "https://github.com/mlaursen/react-md/issues"
  },
  "scripts": {
    "build:base-deps": "lerna run --parallel build --scope @react-md/theme --scope @react-md/typography --scope @react-md/transition --scope @react-md/utils --scope @react-md/elevation",
    "build:base": "lerna run --parallel build --scope @react-md/states --scope @react-md/listeners --scope @react-md/icon --scope @react-md/a11y",
    "build:remaining": "lerna run build --scope @react-md/button --scope @react-md/material-icons --scope @react-md/list --scope @react-md/tree-view --scope @react-md/tooltip --scope react-md",
    "build": "npm run build:base-deps && npm run build:base && npm run build:remaining",
    "format": "prettier --write packages/*/**/*.tsx packages/*/**/*.ts",
    "lint:styles": "sass-lint -v",
    "start": "cd packages/documentation && npm run start",
    "dev": "npm-run-all -p \"watch\" \"start\"",
    "watch": "lerna run watch --ignore doc-generator --ignore examples",
    "docs": "lerna run docs --ignore examples --ignore doc-generator",
    "toc": "./packages/doc-generator/src/index.js --no-proptypes --no-sassdoc"
  },
  "homepage": "https://github.com/mlaursen/react-md#readme",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mlaursen/react-md.git"
  },
  "devDependencies": {
    "commander": "^2.15.1",
    "lerna": "^2.11.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.7",
    "sass-lint": "^1.12.1"
  }
}
