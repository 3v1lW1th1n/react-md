{
  "name": "react-md",
  "private": true,
  "version": "2.0.0-alpha.0",
  "description": "The mono-repo for react-md",
  "main": "index.js",
  "scripts": {
    "start": "yarn workspace documentation start-dev",
    "dev": "npm-run-all -p watch start",
    "force-install": "yarn --force",
    "setup": "npm-run-all dev-utils force-install build",
    "dev-utils": "lerna run build --scope @react-md/dev-utils",
    "clean-build": "npm-run-all clean dev-utils build-dist",
    "build-dist": "lerna run build --ignore @react-md/dev-utils --ignore documentation",
    "build": "lerna run build --ignore @react-md/dev-utils --ignore documentation --ignore react-md --",
    "typecheck-packages": "tsc --noEmit -p tsconfig.check.json",
    "typecheck-documentation": "tsc --noEmit --noUnusedLocals --noUnusedParameters -p packages/documentation/tsconfig.json",
    "typecheck": "npm-run-all typecheck-packages typecheck-documentation",
    "lint-ts": "eslint \"packages/*/{components,constants,hooks,icons,pages,src,utils}/**/*.{ts,tsx}\"",
    "lint-styles": "sass-lint -c .sass-lint.yml -v",
    "lint": "npm-run-all -p lint-ts lint-styles",
    "test": "jest --config jest.config.js",
    "test-doc": "yarn workspace documentation test",
    "test-all": "npm-run-all test-doc test",
    "format": "prettier --write packages/*/{src,components,constants,hooks,pages,server,utils}/**/*.{ts,tsx,scss,js,jsx}",
    "sandbox": "yarn workspace documentation sandbox",
    "prepublishOnly": "npm-run-all clean dev-utils force-install build-dist lint test",
    "update-vars": "lerna exec --ignore @react-md/dev-utils --ignore documentation -- yarn build --styles-only",
    "cli": "dev-utils",
    "clean-packages": "lerna exec \"npm run clean\" --ignore @react-md/dev-utils --ignore documentation",
    "clean-dev-utils": "lerna run clean --scope @react-md/dev-utils",
    "clean": "npm-run-all clean-packages clean-dev-utils",
    "watch": "nodemon watcher.js --watch watcher.js"
  },
  "engines": {
    "node": ">= 10"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mlaursen/react-md.git"
  },
  "author": "Mikkel Laursen <mlaursen03@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mlaursen/react-md/issues"
  },
  "homepage": "https://react-md.dev",
  "devDependencies": {
    "@testing-library/react": "^8.0.7",
    "@testing-library/react-hooks": "^1.1.0",
    "@types/classnames": "^2.2.9",
    "@types/filesize": "^4.2.0",
    "@types/fs-extra": "^8.0.0",
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.141",
    "@types/node": "^12.7.11",
    "@types/node-sass": "^4.11.0",
    "@types/prettier": "^1.18.3",
    "@types/reach__router": "^1.2.4",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.5",
    "@types/react-router": "^4.4.5",
    "@types/react-router-dom": "^4.3.2",
    "@types/react-test-renderer": "^16.8.3",
    "@types/react-transition-group": "^4.2.3",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "@typescript-eslint/parser": "^2.3.2",
    "babel-eslint": "^10.0.3",
    "chokidar": "^3.2.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.1.2",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "lint-staged": "^9.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "sass-lint": "^1.13.1",
    "ts-jest": "^24.1.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm-run-all typecheck lint test-all"
    }
  },
  "lint-staged": {
    "**/*.md": [
      "prettier --write",
      "git add"
    ],
    "packages/*/{src,components,pages,icons,hooks,utils,server}/**/*.{ts,tsx,scss,js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
