{
  "name": "react-md",
  "private": true,
  "version": "2.0.0-alpha.0",
  "description": "The mono-repo for react-md",
  "main": "index.js",
  "scripts": {
    "force-install": "yarn --force",
    "setup": "npm-run-all dev-utils force-install build",
    "dev-utils": "lerna run build --scope @react-md/dev-utils",
    "build": "lerna run build --ignore @react-md/dev-utils --ignore documentation --ignore react-md --stream -- --no-umd",
    "lint:scripts": "tslint -p tsconfig.json",
    "lint:styles": "sass-lint -c .sass-lint.yml -v",
    "lint": "npm-run-all -p \"lint:scripts\" \"lint:styles\"",
    "test:each": "lerna exec --ignore @react-md/dev-utils --ignore examples --stream -- yarn test",
    "test": "jest --config jest.config.js",
    "format": "prettier --write packages/*/src/**/*.{ts,tsx,scss}",
    "update-vars": "lerna exec --ignore @react-md/dev-utils --ignore examples -- yarn build --styles-only",
    "clean": "lerna run clean --ignore @react-md/dev-utils --stream",
    "watch": "node watcher.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mlaursen/react-md.git"
  },
  "author": "Mikkel Laursen <mlaursen03@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mlaursen/react-md/issues"
  },
  "homepage": "https://react-md.dev",
  "devDependencies": {
    "@types/classnames": "^2.2.7",
    "@types/enzyme": "^3.1.18",
    "@types/filesize": "^3.6.0",
    "@types/fs-extra": "^5.0.4",
    "@types/glob": "^7.1.1",
    "@types/gzip-size": "^4.1.0",
    "@types/jest": "^23.3.11",
    "@types/lodash": "^4.14.121",
    "@types/node": "^11.9.4",
    "@types/node-sass": "^4.11.0",
    "@types/prettier": "^1.16.1",
    "@types/pretty-ms": "^4.0.0",
    "@types/reach__router": "^1.2.2",
    "@types/react": "^16.8.7",
    "@types/react-dom": "^16.8.2",
    "@types/react-router": "^4.4.4",
    "@types/react-router-dom": "^4.3.1",
    "@types/react-test-renderer": "^16.8.1",
    "@types/react-transition-group": "^2.0.16",
    "babel-eslint": "^10.0.1",
    "chokidar": "^2.1.2",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.14.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-test-renderer": "^16.8.4",
    "react-testing-library": "^5.8.0",
    "sass-lint": "^1.12.1",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.3.3333"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.md": [
      "prettier --write",
      "git add"
    ],
    "packages/*/src/**/*.{ts,tsx,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
