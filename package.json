{
  "name": "react-md",
  "private": true,
  "version": "2.0.0-alpha.0",
  "description": "The mono-repo for react-md",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all -p dev-server watch",
    "dev-server": "cd packages/documentation && yarn dev",
    "force-install": "yarn --force",
    "setup": "npm-run-all dev-utils force-install build",
    "dev-utils": "lerna run build --scope @react-md/dev-utils",
    "clean-build": "npm-run-all clean build-dist",
    "build-dist": "lerna run build --ignore @react-md/dev-utils --ignore documentation --stream",
    "build": "lerna run build --ignore @react-md/dev-utils --ignore documentation --ignore react-md --stream -- --no-umd",
    "lint-scripts": "tslint -p tsconfig.json",
    "lint-styles": "sass-lint -c .sass-lint.yml -v",
    "lint": "npm-run-all -p lint-scripts lint-styles",
    "test": "jest --config jest.config.js",
    "format": "prettier --write packages/*/src/**/*.{ts,tsx,scss}",
    "prepublishOnly": "npm-run-all clean build-dist lint test",
    "update-vars": "lerna exec --ignore @react-md/dev-utils --ignore examples -- yarn build --styles-only",
    "clean-packages": "lerna exec \"npm run clean\" --ignore @react-md/dev-utils --ignore documentation --stream",
    "clean-dev-utils": "cd packages/dev-utils && yarn clean",
    "clean-tscache": "rm -rf ./.tscache",
    "clean": "npm-run-all clean-packages clean-tscache clean-dev-utils",
    "watch": "node watcher.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mlaursen/react-md.git"
  },
  "author": "Mikkel Laursen <mlaursen03@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mlaursen/react-md/issues"
  },
  "homepage": "https://react-md.dev",
  "devDependencies": {
    "@types/classnames": "^2.2.7",
    "@types/enzyme": "^3.9.1",
    "@types/filesize": "^4.1.0",
    "@types/fs-extra": "^5.0.4",
    "@types/glob": "^7.1.1",
    "@types/gzip-size": "^4.1.0",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.123",
    "@types/node": "^11.12.1",
    "@types/node-sass": "^4.11.0",
    "@types/prettier": "^1.16.1",
    "@types/pretty-ms": "^4.0.0",
    "@types/reach__router": "^1.2.2",
    "@types/react": "^16.8.10",
    "@types/react-dom": "^16.8.3",
    "@types/react-router": "^4.4.5",
    "@types/react-router-dom": "^4.3.1",
    "@types/react-test-renderer": "^16.8.1",
    "@types/react-transition-group": "^2.0.16",
    "babel-eslint": "^10.0.1",
    "chokidar": "^2.1.5",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.15.3",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-hooks-testing-library": "^0.3.8",
    "react-test-renderer": "^16.8.6",
    "react-testing-library": "^6.0.3",
    "sass-lint": "^1.12.1",
    "ts-jest": "^24.0.0",
    "tslint": "^5.14.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.md": [
      "prettier --write",
      "git add"
    ],
    "packages/*/src/**/*.{ts,tsx,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
