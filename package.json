{
  "name": "react-md",
  "private": true,
  "version": "2.0.0-alpha-1",
  "description": "The mono-repo for react-md",
  "main": "index.js",
  "scripts": {
    "setup": "npm-run-all dev-utils build",
    "dev-utils": "lerna run build --scope @react-md/dev-utils",
    "build": "lerna run build --ignore @react-md/dev-utils --ignore react-md -- --no-umd",
    "lint:scripts": "tslint -p tsconfig.json",
    "lint:styles": "sass-lint -c .sass-lint.yml -v",
    "lint": "npm-run-all -p \"lint:scripts\" \"lint:styles\"",
    "test": "lerna exec --ignore @react-md/dev-utils -- yarn test",
    "format": "prettier --write packages/*/src/**/*.{ts,tsx,scss}",
    "clean": "lerna run clean --ignore @react-md/dev-utils",
    "watch": "node watcher.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mlaursen/react-md.git"
  },
  "author": "Mikkel Laursen <mlaursen03@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mlaursen/react-md/issues"
  },
  "homepage": "https://github.com/mlaursen/react-md#readme",
  "devDependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/classnames": "^2.2.7",
    "@types/enzyme": "^3.1.15",
    "@types/filesize": "^3.6.0",
    "@types/fs-extra": "^5.0.4",
    "@types/glob": "^7.1.1",
    "@types/gzip-size": "^4.1.0",
    "@types/jest": "^23.3.11",
    "@types/lodash": "^4.14.119",
    "@types/node": "^10.12.18",
    "@types/node-sass": "^3.10.32",
    "@types/prettier": "^1.15.2",
    "@types/pretty-ms": "^4.0.0",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/react-router": "^4.4.3",
    "@types/react-router-dom": "^4.3.1",
    "@types/react-test-renderer": "^16.0.3",
    "@types/react-transition-group": "^2.0.15",
    "chokidar": "^2.0.4",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lerna": "^3.8.5",
    "lint-staged": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-test-renderer": "^16.7.0",
    "sass-lint": "^1.12.1",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.md": [
      "prettier --write",
      "git add"
    ],
    "packages/*/src/**/*.{ts,tsx,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
